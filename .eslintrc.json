{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": [
        "node_modules/",
        "**/node_modules/",
        "/**/node_modules/*",
        "dist/",
        "build/"
    ],
    "rules": {
        "indent": ["error", 4],
        "no-continue": "off",
        "no-nested-ternary": "off",
        "no-restricted-globals": 1,
        "no-console": "off",
        "no-unused-vars": "off"
    }
}
